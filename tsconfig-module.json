{
    "extends": "ts-node/node16/tsconfig.json",
    "compilerOptions": {
        "paths": {
            "@/*": ["./src/*"]
        },
        "declaration": true,
        "rootDir": "src",
        "outDir": "./dist-module",
        "target": "ES2015",
        "module": "ESNext"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}